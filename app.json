{
  "expo": {
    "name": "SafeNet",
    "slug": "safenet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safenet.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SafeNet needs your location to find nearby safe places and share with guardians.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeNet needs your background location to track your movement during emergencies.",
        "NSLocationAlwaysUsageDescription": "SafeNet tracks your location in the background to ensure your safety.",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.safenet.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SafeNet to use your location."
        }
      ]
    ]
  }
}