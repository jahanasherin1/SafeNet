// app.json
{
  "expo": {
    "name": "SafeNet",
    "slug": "safenet",
    "scheme": "safenet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "CHANGE_DEVICE_SLEEP_STATE",
        "INTERNET",
        "ACTIVITY_RECOGNITION"
      ],
      "package": "com.safenet.app",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDXZ9Xq8Xq8Xq8Xq8Xq8Xq8Xq8Xq8Xq8"
        }
      }
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeNet needs your location in the background to alert guardians if you are in danger, even when the app is closed.",
        "NSLocationWhenInUseUsageDescription": "SafeNet uses your location to show where you are to your guardians.",
        "NSLocationAlwaysUsageDescription": "SafeNet needs your location to keep you safe."
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SafeNet to use your location."
        }
      ]
    ]
  }
}